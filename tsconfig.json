{
  "compilerOptions": {
    "rootDirs": ["src"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build/cjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsxImportSource": "@emotion/react"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
